{
  "name": "react-native-b4a",
  "version": "0.0.2",
  "description": "Bridging the gap between buffers and typed arrays in React Native",
  "main": "./index.js",
  "files": [
    "index.js",
    "react-native.config.js",
    "*.podspec",
    "android",
    "ios",
    "shared",
    "specs",
    "lib"
  ],
  "scripts": {
    "test": "prettier . --check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holepunchto/react-native-b4a.git"
  },
  "author": "Holepunch",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/holepunchto/react-native-b4a/issues"
  },
  "homepage": "https://github.com/holepunchto/react-native-b4a#readme",
  "codegenConfig": {
    "name": "BufferForArraySpec",
    "type": "modules",
    "jsSrcsDir": "specs",
    "android": {
      "javaPackageName": "to.holepunch.b4a"
    },
    "ios": {
      "modulesConformingToProtocol": "RCTTurboModule",
      "modulesProvider": {
        "BufferForArray": "BufferForArrayModuleProvider"
      }
    }
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "prettier-config-standard": "^7.0.0"
  }
}
